header
    a(href="/").header__logo
        i.fab.fa-youtube
    nav
        ul
            li
                a(href="/search").makegray
                    i.fas.fa-search

            //- pug 파일에서 locals에 접근할 수 있음
            if loggedIn
                li
                    a(href="/videos/upload") Upload Video
                li
                    a(href="/users/edit") Edit Profile
                li
                    a(href="/users/logout") Log Out
                li
                    a(href=`/users/${loggedInUser._id}`)
                        if loggedInUser.avatarUrl === ""
                            span 😀
                        else
                            if loggedInUser.avatarUrl.startsWith("http")
                                img.header__avatar(src=loggedInUser.avatarUrl)
                            else
                                img.header__avatar(src="/" + loggedInUser.avatarUrl)
                            
            else
                li
                    a(href="/login").makegray Login
                li
                    a(href="/join").header__btn Join